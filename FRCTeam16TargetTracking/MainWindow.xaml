        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="411" Width="579"
        xmlns:my="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers" Loaded="Window_Loaded">
    <Grid>
        
        <my:KinectSensorChooser HorizontalAlignment="Left" Margin="-27,365,0,0" Name="kinectSensorChooser1" VerticalAlignment="Top" Width="328" />
        <my:KinectDepthViewer Visibility="Hidden" HorizontalAlignment="Left" Margin="411,385,0,0" Name="kinectDepthViewer1" VerticalAlignment="Top" Height="240" Width="320" Kinect="{Binding ElementName=kinectSensorChooser1, Path=Kinect}" />
        <Image Height="229" HorizontalAlignment="Left" Margin="50,60,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="350" />
        <CheckBox Content="Show Player" Height="16" HorizontalAlignment="Left" Margin="50,319,0,0" Name="chkShowPlayer" VerticalAlignment="Top" Click="chkShowPlayer_Click" />
    </Grid>
</Window>
